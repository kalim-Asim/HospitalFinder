<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Profile</title>
  <link rel="stylesheet" href="index.css">

  <!-- Favicon -->
  <link rel="icon" href="favicon.png" type="image/jpg">
  <style>
    .profile-img {
        display: block;
        margin: 20px auto;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
    }
</style>
</head>

<body>
  <div class="container">
    <h2>Edit Patient Profile</h2>
    <!-- Profile Image Preview -->
    <img id="profileImage" src="https://e3.365dm.com/18/04/1600x900/skynews-monkey-selfie-macaque_4291275.jpg?20180424101727" alt="Profile Photo" class="profile-img">

    <!-- Form for Uploading Profile Photo -->
    <form action="/upload-profile-photo" method="post" enctype="multipart/form-data">
        <label for="profilePhoto">Upload Profile Photo:</label>
        <input type="file" id="profilePhoto" name="profilePhoto" accept="image/*" onchange="previewImage(event)">
        <br><br>
        <button type="submit">Save Changes</button>
    </form>

    <script>
        // Function to preview the uploaded image
        function previewImage(event) {
            const image = document.getElementById('profileImage');
            image.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
    <!-- Edit Profile Form -->
    <form action="http://localhost:3001/edit-profile" method="POST">
      <div class="form-group">
        <label for="name">Patient's Name:</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="history">Medical History:</label>
        <input type="text" id="history" name="history" required>
      </div>
      <div class="form-group">
        <label for="contact">Contact Details(Phone Number):</label>
        <input type="number" id="contact" name="contact" required>
      </div>
      <div class="form-group">
        <label for="avaibility">Assigned Doctor:</label>
        <input type="number" id="avaibility" name="avaibility" required>
      </div>
      <div class="form-group">
        <label for="details">Appointment History:</label>
        <input type="text" id="details" name="details" required>
      </div>
      <button type="submit">Save Changes</button>
      
    </form>
  </div>
</body>

</html>
