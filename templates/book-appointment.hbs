<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Book Appointment</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="icon" href="favicon.png" type="image/jpg">
  <style>
    /* General Styles for Dark Mode */
    body {
      font-family: Arial, sans-serif;
      background-color: #121212; /* Dark background */
      color: #e0e0e0; /* Light text color */
      display: flex;
      justify-content: center;
      /* Removed align-items: center and height: 100vh to prevent content hiding */
      padding: 20px; /* Added padding for spacing */
      margin: 0;
      transition: background-color 0.3s, color 0.3s;
    }

    .container {
      width: 100%; /* Use full width with max-width constraint */
      max-width: 800px;
      padding: 20px;
      background: #1e1e1e; /* Slightly lighter background for the form */
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      box-sizing: border-box; /* Ensure padding is included in width */
    }

    .title {
      text-align: center;
      font-size: 2rem;
      font-weight: bold;
      color: #e0e0e0; /* Light color for heading */
      margin-bottom: 20px;
    }

    /* Form Styles */
    .appointment-form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem; /* Increased gap for better spacing */
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .form-group label {
      font-size: 1rem;
      font-weight: bold;
      color: #e0e0e0; /* Light text color for labels */
    }

    /* Input, Select, and Textarea Styles */
    .form-group input,
    .form-group select,
    .form-group textarea {
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #444;
      border-radius: 5px;
      background: #333;
      color: #e0e0e0; /* Light text color for input fields */
      outline: none;
      transition: border-color 0.3s, background-color 0.3s, color 0.3s;
      box-sizing: border-box; /* Ensure padding is included in width */
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      border-color: #6d28d9; /* Accent color on focus */
      background: #444;
    }

    /* Specific Styling for Number Inputs (if any) */
    input[type="number"] {
      -moz-appearance: textfield; /* Hide spinner for Firefox */
    }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    /* Submit Button Styles */
    .submit-btn {
      padding: 0.75rem 1.5rem;
      background: linear-gradient(to right, #4b21b6, #6d28d9); /* Gradient button */
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s;
      align-self: center;
      width: 100%; /* Make button full width */
      max-width: 200px; /* Optional: limit max width */
    }

    .submit-btn:hover {
      background: linear-gradient(to left, #4b21b6, #6d28d9);
    }

    /* Responsive Styling */
    @media (max-width: 600px) {
      .container {
        padding: 1rem;
      }

      .appointment-form {
        gap: 1rem;
      }

      .form-group input,
      .form-group select,
      .form-group textarea {
        font-size: 0.875rem;
      }

      .submit-btn {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        max-width: 100%; /* Ensure button fits within container */
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <h1 class="title">Book an Appointment</h1>

    <!-- Appointment Form -->
    <form action="http://localhost:3001/book-appointment" method="POST" class="appointment-form">
      
      <!-- Your Name -->
      <div class="form-group">
        <label for="name">Your Name</label>
        <input type="text" name="name" id="name" placeholder="Enter your full name" required>
      </div>

      <!-- Email Address -->
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" name="email" id="email" placeholder="Enter your email" required>
      </div>

      <!-- Phone Number -->
      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="tel" name="phone" id="phone" placeholder="Enter your phone number" required>
      </div>

      <!-- Select Doctor -->
      <div class="form-group">
        <label for="doctor">Select Doctor</label>
        <select name="doctor" id="doctor" required>
          <option value="">Choose a doctor</option>
          {{#each doctors}}
            <option value="{{this._id}}">Dr. {{this.name}} ({{this.speciality}})</option>
          {{/each}}
        </select>
      </div>


      {{!-- <div class="form-group">
        <label for="doctor">Select Doctor</label>
        <select name="doctor" id="doctor" required>
          <option value="">Choose a doctor</option>
          <option value="Dr. John Doe">Dr. John Doe (Cardiologist)</option>
          <option value="Dr. Sarah Smith">Dr. Sarah Smith (Dermatologist)</option>
          <option value="Dr. Emily Brown">Dr. Emily Brown (Orthopedic)</option>
        </select>
      </div> --}}

      <!-- Appointment Date -->
      <div class="form-group">
        <label for="appointmentDate">Appointment Date</label>
        <input type="date" name="appointmentDate" id="appointmentDate" required>
      </div>

      <!-- Appointment Time -->
      <div class="form-group">
        <label for="appointmentTime">Appointment Time</label>
        <input type="time" name="appointmentTime" id="appointmentTime" required>
      </div>

      <!-- Notes (Optional) -->
      <div class="form-group">
        <label for="notes">Additional Notes (Optional)</label>
        <textarea name="notes" id="notes" rows="3" placeholder="Any additional information..."></textarea>
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <button type="submit" class="submit-btn">Book Appointment</button>
      </div>
      
    </form>
  </div>

</body>
</html>
