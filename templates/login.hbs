<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="login.css">

    <!-- Favicon -->
    <link rel="icon" href="favicon.png" type="image/jpg">
</head>

<body>
    <div class="container">
        <h2>Log In</h2>
        <form id="login-form">
            <input type="email" id="email" name="email" placeholder="Email" required>

            <div class="password-container">
                <input type="password" id="password" name="password" placeholder="Password" required>
                <span class="toggle-password" onclick="togglePassword()">üëÅ</span> <!-- Eye icon -->
            </div>

            <input type="submit" value="Log In">
        </form>
        <a href="/signup">Create a New Account</a>
        <a href="/forgot-password">Forgot Password?</a>
    </div>

    <script>
        // Toggle password visibility
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const passwordIcon = document.querySelector('.toggle-password');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.textContent = 'üôà'; // Change icon to indicate "Hide"
            } else {
                passwordInput.type = 'password';
                passwordIcon.textContent = 'üëÅ'; // Change icon back to "Show"
            }
        }

        // Handle form submission using fetch
        document.getElementById("login-form").addEventListener("submit", async function (event) {
            event.preventDefault(); // Prevent traditional form submission

            const email = document.getElementById("email").value;
            const password = document.getElementById("password").value;

            // Send the login request to the server
            const response = await fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email, password }),
            });

            if (response.ok) {
                const result = await response.json();
                // Store email in local storage
                localStorage.setItem('userEmail', result.email);

                // Redirect to user profile
                window.location.href = result.redirectUrl;
            } else {
                alert("Login failed. Please check your credentials.");
            }
        });
    </script>
</body>

</html>
